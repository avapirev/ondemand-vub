---
cluster: "*"

# app-specific attributes
attributes:
  toolchain:
    label: "Toolchain and Python versions"
    widget: "select"
    options:
      - ["2023a: Python/3.11.3 + JupyterLab/4.2.1", "2023a"]
      - ["2022a: Python/3.10.4 + JupyterLab/3.5.0", "2022a"]
  load_scipy:
    label: "Load the SciPy-bundle module"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"
  load_matplotlib:
    label: "Load the matplotlib module"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"
  load_dask:
    label: "Load the dask module"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"
  load_molecules:
    label: "Load the nglview and py3Dmol modules"
    widget: "check_box"
    checked_value: "yes"
    unchecked_value: "no"

form:
  - auto_queues
  - toolchain
  - load_scipy
  - load_matplotlib
  - load_dask
  - load_molecules
  - global_num_cores
  - bc_num_slots
  - global_bc_num_gpu_slots
  - global_bc_num_hours
  - global_working_dir
  - global_prerun
  - bc_email_on_started
