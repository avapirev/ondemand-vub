# Export the module function if it exists
[[ $(type -t module) == "function" ]] && export -f module

# rstudio 1.4+ needs a csrf token
csrf_token=<%= SecureRandom.uuid %>

# Find available port to run server on
port=$(find_port ${host})

# Define a password and export it for RStudio authentication
password="$(create_passwd 16)"
export RSTUDIO_PASSWORD="$password"

# Set User Defined Working Directory
<%- if context.working_dir.blank? -%>
OOD_WD="$HOME"
<%- else -%>
OOD_WD="<%= context.working_dir.to_s %>"
<%- end -%>
export OOD_WD

export OOD_SESSION_STAGED_ROOT=<%= session.staged_root %>
